<%= render :partial => "preview", :locals => { :content => @content, :preview => @preview } %>
<h2>Edit Content</h2>
<%= error_messages_for :content %>
<% form_for :content, @content, :url => admin_content_path(@content), :html => { :method => :put } do |f|  %>
  <%= render :partial => "fields", :locals => { :f => f } %>
<% end %>